<Window x:Class="GoogleCalendarWidget.EventDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="일정 편집" Height="600" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        AllowsTransparency="True">

    <!-- Material Design Card Container with Dark Theme -->
    <materialDesign:Card Margin="8" UniformCornerRadius="12" 
                        materialDesign:ElevationAssist.Elevation="Dp16">
        <materialDesign:Card.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF2E3B5A" Offset="0"/>
                <GradientStop Color="#FF3E4C6D" Offset="0.5"/>
                <GradientStop Color="#FF4A5A80" Offset="1"/>
            </LinearGradientBrush>
        </materialDesign:Card.Background>
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 헤더 -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="CalendarEdit" 
                                           Width="32" Height="32" 
                                           VerticalAlignment="Center"
                                           Foreground="#FF4FC3F7"/>
                    <TextBlock Text="일정 편집" 
                             FontSize="20" FontWeight="Medium"
                             Foreground="White"
                             Margin="16,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- 닫기 버튼 -->
                <Button Grid.Column="1" 
                        Width="32" Height="32"
                        Background="Transparent"
                        Foreground="#CCCCCCCC"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#30FFFFFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                </Button>
            </Grid>

            <!-- 입력 폼 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- 제목 -->
                    <TextBox x:Name="TitleTextBox" 
                           materialDesign:HintAssist.Hint="제목*"
                           Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                           Foreground="White"
                           materialDesign:HintAssist.Foreground="#CCFFFFFF"
                           materialDesign:TextFieldAssist.UnderlineBrush="#FF4FC3F7"
                           Margin="0,8"/>

                    <!-- 캘린더 선택 -->
                    <ComboBox x:Name="CalendarComboBox" 
                            materialDesign:HintAssist.Hint="캘린더"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                            DisplayMemberPath="Summary"
                            SelectedValuePath="Id"
                            Foreground="White"
                            materialDesign:HintAssist.Foreground="#CCFFFFFF"
                            materialDesign:TextFieldAssist.UnderlineBrush="#FF4FC3F7"
                            Margin="0,8"/>

                    <!-- 종일 일정 체크박스 -->
                    <CheckBox x:Name="AllDayCheckBox" Content="종일 일정" 
                            Foreground="White"
                            Margin="0,16,0,8"
                            Checked="AllDayCheckBox_Checked" 
                            Unchecked="AllDayCheckBox_Unchecked"/>

                    <!-- 시간 설정 그룹 -->
                    <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp4" 
                                       Padding="20" Margin="0,8" 
                                       x:Name="TimeSettingsCard">
                        <materialDesign:Card.Background>
                            <SolidColorBrush Color="#20FFFFFF"/>
                        </materialDesign:Card.Background>
                        <StackPanel>
                            <!-- 시작 시간 -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                
                                <DatePicker Grid.Column="0" x:Name="StartDatePicker" 
                                          materialDesign:HintAssist.Hint="시작 날짜"
                                          Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                          Foreground="White"
                                          materialDesign:HintAssist.Foreground="#CCFFFFFF"
                                          materialDesign:TextFieldAssist.UnderlineBrush="#FF4FC3F7"/>
                                
                                <StackPanel Grid.Column="2" Grid.ColumnSpan="3" 
                                          Orientation="Horizontal" 
                                          x:Name="StartTimePanel">
                                    <ComboBox x:Name="StartHourComboBox" Width="80"
                                            materialDesign:HintAssist.Hint="시"
                                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                            Foreground="White"
                                            materialDesign:HintAssist.Foreground="#CCFFFFFF"
                                            materialDesign:TextFieldAssist.UnderlineBrush="#FF4FC3F7"/>
                                    <ComboBox x:Name="StartMinuteComboBox" Width="80" Margin="8,0,0,0"
                                            materialDesign:HintAssist.Hint="분"
                                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                            Foreground="White"
                                            materialDesign:HintAssist.Foreground="#CCFFFFFF"
                                            materialDesign:TextFieldAssist.UnderlineBrush="#FF4FC3F7"/>
                                </StackPanel>
                            </Grid>

                            <!-- 종료 시간 -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                
                                <DatePicker Grid.Column="0" x:Name="EndDatePicker" 
                                          materialDesign:HintAssist.Hint="종료 날짜"
                                          Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                          Foreground="White"
                                          materialDesign:HintAssist.Foreground="#CCFFFFFF"
                                          materialDesign:TextFieldAssist.UnderlineBrush="#FF4FC3F7"/>
                                
                                <StackPanel Grid.Column="2" Grid.ColumnSpan="3" 
                                          Orientation="Horizontal" 
                                          x:Name="EndTimePanel">
                                    <ComboBox x:Name="EndHourComboBox" Width="80"
                                            materialDesign:HintAssist.Hint="시"
                                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                            Foreground="White"
                                            materialDesign:HintAssist.Foreground="#CCFFFFFF"
                                            materialDesign:TextFieldAssist.UnderlineBrush="#FF4FC3F7"/>
                                    <ComboBox x:Name="EndMinuteComboBox" Width="80" Margin="8,0,0,0"
                                            materialDesign:HintAssist.Hint="분"
                                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                            Foreground="White"
                                            materialDesign:HintAssist.Foreground="#CCFFFFFF"
                                            materialDesign:TextFieldAssist.UnderlineBrush="#FF4FC3F7"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- 설명 -->
                    <TextBox x:Name="DescriptionTextBox" 
                           materialDesign:HintAssist.Hint="설명"
                           Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                           MinHeight="80" AcceptsReturn="True" 
                           VerticalScrollBarVisibility="Auto" 
                           TextWrapping="Wrap"
                           Foreground="White"
                           materialDesign:HintAssist.Foreground="#CCFFFFFF"
                           materialDesign:TextFieldAssist.UnderlineBrush="#FF4FC3F7"
                           Margin="0,8"/>

                    <!-- 위치 -->
                    <TextBox x:Name="LocationTextBox" 
                           materialDesign:HintAssist.Hint="위치"
                           Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                           Foreground="White"
                           materialDesign:HintAssist.Foreground="#CCFFFFFF"
                           materialDesign:TextFieldAssist.UnderlineBrush="#FF4FC3F7"
                           Margin="0,8"/>
                </StackPanel>
            </ScrollViewer>

            <!-- 버튼 패널 -->
            <Grid Grid.Row="2" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 삭제 버튼 (수정 모드일 때만) -->
                <Button Grid.Column="0" x:Name="DeleteButton" 
                      Background="#FFEF5350"
                      Foreground="White"
                      BorderThickness="0"
                      Padding="20,20"
                      MinHeight="56"
                      HorizontalAlignment="Left"
                      Cursor="Hand"
                      FontWeight="Medium"
                      Click="DeleteButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}"
                                    MinHeight="{TemplateBinding MinHeight}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" 
                                                    Color="#40000000" Opacity="0.3"/>
                                </Border.Effect>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE53935"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Delete" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="삭제" FontSize="14"/>
                    </StackPanel>
                </Button>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="취소" 
                          Background="Transparent"
                          Foreground="White"
                          BorderBrush="#30FFFFFF"
                          BorderThickness="1"
                          Padding="24,20"
                          MinWidth="80"
                          MinHeight="56"
                          FontWeight="Medium"
                          FontSize="14"
                          Cursor="Hand"
                          Click="CancelButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8" 
                                        Padding="{TemplateBinding Padding}"
                                        MinWidth="{TemplateBinding MinWidth}"
                                        MinHeight="{TemplateBinding MinHeight}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#20FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Background="#FF4FC3F7"
                          Foreground="White"
                          BorderThickness="0"
                          Padding="24,20"
                          MinWidth="100"
                          MinHeight="56"
                          Margin="12,0,0,0"
                          FontWeight="Medium"
                          Cursor="Hand"
                          Click="SaveButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8" 
                                        Padding="{TemplateBinding Padding}"
                                        MinWidth="{TemplateBinding MinWidth}"
                                        MinHeight="{TemplateBinding MinHeight}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" 
                                                        Color="#404FC3F7" Opacity="0.4"/>
                                    </Border.Effect>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF29B6F6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="저장" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </materialDesign:Card>
</Window>
