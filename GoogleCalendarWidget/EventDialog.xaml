<Window x:Class="GoogleCalendarWidget.EventDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="일정 편집" Height="600" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        AllowsTransparency="True">

    <!-- Material Design Card Container -->
    <materialDesign:Card Margin="0" UniformCornerRadius="8" 
                        materialDesign:ElevationAssist.Elevation="Dp8">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 헤더 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24">
                <materialDesign:PackIcon Kind="CalendarEdit" 
                                       Width="28" Height="28" 
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                <TextBlock Text="일정 편집" 
                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                         Margin="12,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- 입력 폼 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- 제목 -->
                    <TextBox x:Name="TitleTextBox" 
                           materialDesign:HintAssist.Hint="제목*"
                           Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                           Margin="0,8"/>

                    <!-- 캘린더 선택 -->
                    <ComboBox x:Name="CalendarComboBox" 
                            materialDesign:HintAssist.Hint="캘린더"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                            DisplayMemberPath="Summary"
                            SelectedValuePath="Id"
                            Margin="0,8"/>

                    <!-- 종일 일정 체크박스 -->
                    <CheckBox x:Name="AllDayCheckBox" Content="종일 일정" 
                            Margin="0,16,0,8"
                            Checked="AllDayCheckBox_Checked" 
                            Unchecked="AllDayCheckBox_Unchecked"/>

                    <!-- 시간 설정 그룹 -->
                    <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2" 
                                       Padding="16" Margin="0,8" 
                                       x:Name="TimeSettingsCard">
                        <StackPanel>
                            <!-- 시작 시간 -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                
                                <DatePicker Grid.Column="0" x:Name="StartDatePicker" 
                                          materialDesign:HintAssist.Hint="시작 날짜"
                                          Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                                
                                <StackPanel Grid.Column="2" Grid.ColumnSpan="3" 
                                          Orientation="Horizontal" 
                                          x:Name="StartTimePanel">
                                    <ComboBox x:Name="StartHourComboBox" Width="80"
                                            materialDesign:HintAssist.Hint="시"
                                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                                    <ComboBox x:Name="StartMinuteComboBox" Width="80" Margin="8,0,0,0"
                                            materialDesign:HintAssist.Hint="분"
                                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                                </StackPanel>
                            </Grid>

                            <!-- 종료 시간 -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                
                                <DatePicker Grid.Column="0" x:Name="EndDatePicker" 
                                          materialDesign:HintAssist.Hint="종료 날짜"
                                          Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                                
                                <StackPanel Grid.Column="2" Grid.ColumnSpan="3" 
                                          Orientation="Horizontal" 
                                          x:Name="EndTimePanel">
                                    <ComboBox x:Name="EndHourComboBox" Width="80"
                                            materialDesign:HintAssist.Hint="시"
                                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                                    <ComboBox x:Name="EndMinuteComboBox" Width="80" Margin="8,0,0,0"
                                            materialDesign:HintAssist.Hint="분"
                                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- 설명 -->
                    <TextBox x:Name="DescriptionTextBox" 
                           materialDesign:HintAssist.Hint="설명"
                           Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                           MinHeight="80" AcceptsReturn="True" 
                           VerticalScrollBarVisibility="Auto" 
                           TextWrapping="Wrap"
                           Margin="0,8"/>

                    <!-- 위치 -->
                    <TextBox x:Name="LocationTextBox" 
                           materialDesign:HintAssist.Hint="위치"
                           Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                           Margin="0,8"/>
                </StackPanel>
            </ScrollViewer>

            <!-- 버튼 패널 -->
            <Grid Grid.Row="2" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 삭제 버튼 (수정 모드일 때만) -->
                <Button Grid.Column="0" x:Name="DeleteButton" 
                      Background="#FF8B0000"
                      Foreground="White"
                      BorderThickness="0"
                      Padding="16,8"
                      HorizontalAlignment="Left"
                      Cursor="Hand"
                      Click="DeleteButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Delete" Margin="0,0,8,0"/>
                        <TextBlock Text="삭제"/>
                    </StackPanel>
                </Button>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="취소" 
                          Background="Transparent"
                          Foreground="{DynamicResource MaterialDesignBody}"
                          BorderBrush="{DynamicResource MaterialDesignDivider}"
                          BorderThickness="1"
                          Padding="16,8"
                          Cursor="Hand"
                          Click="CancelButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Background="{DynamicResource PrimaryHueMidBrush}"
                          Foreground="White"
                          BorderThickness="0"
                          Padding="16,8"
                          Margin="8,0,0,0"
                          Cursor="Hand"
                          Click="SaveButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="4" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,8,0"/>
                            <TextBlock Text="저장"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </materialDesign:Card>
</Window>
